FROM openjdk:23-jre-slim

WORKDIR /app

# Install required packages (minimal)
RUN apt-get update && apt-get install -y \
    wget \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Copy Gradle wrapper and build files
COPY gradlew gradlew.bat ./
COPY gradle/ gradle/
COPY build.gradle settings.gradle ./

# Make gradlew executable
RUN chmod +x ./gradlew

# Set Gradle memory options
ENV GRADLE_OPTS="-Xmx512m -Xms256m -Dorg.gradle.daemon=false -Dorg.gradle.jvmargs='-Xmx512m -Xms256m'"

# Download dependencies with memory constraints
RUN ./gradlew dependencies --no-daemon

# Copy source code
COPY src/ src/

# Build with memory constraints
RUN ./gradlew build --no-daemon -x test

# Set JVM options for the application
ENV JAVA_OPTS="-Xmx384m -Xms192m -XX:+UseG1GC -XX:MaxGCPauseMillis=200 -XX:+UseStringDeduplication"

# Expose ports
EXPOSE 8080 5005

# Default command with memory-optimized settings
CMD ["sh", "-c", "./gradlew bootRun --no-daemon -Dspring.jvm.opts=\"${JAVA_OPTS}\""]
